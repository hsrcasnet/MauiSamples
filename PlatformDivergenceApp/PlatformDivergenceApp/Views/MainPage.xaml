<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PlatformDivergenceApp.ViewModels"
    x:DataType="vm:MainViewModel"
    x:Class="PlatformDivergenceApp.Views.MainPage"
    Title="MainPage">

    <ScrollView Padding="8">
        <VerticalStackLayout Spacing="8">
            <Button
                Command="{Binding NavigateToSettingsPageCommand}"
                Text="SettingsPage" />
            <Button
                Command="{Binding NavigateToDeviceOrientationPageCommand}"
                Text="DeviceOrientationPage" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
