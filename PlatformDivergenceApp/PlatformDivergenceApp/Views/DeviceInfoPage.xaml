<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PlatformDivergenceApp.ViewModels"
    x:DataType="vm:DeviceInfoViewModel"
    x:Class="PlatformDivergenceApp.Views.DeviceInfoPage"
    Title="DeviceInfoPage">
    <VerticalStackLayout
        Spacing="8"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            BackgroundColor="{StaticResource Secondary}"
            FontSize="Large"
            Text="{Binding Model, StringFormat='Model={0}'}" />
        <Label
            BackgroundColor="{StaticResource Secondary}"
            FontSize="Large"
            Text="{Binding OSVersion, StringFormat='OSVersion={0}'}" />
        <Label
            BackgroundColor="{StaticResource Secondary}"
            FontSize="Large"
            Text="{Binding AppVersion, StringFormat='AppVersion={0}'}" />
    </VerticalStackLayout>
</ContentPage>