<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StylesDemo.Views.ImplicitStylesDemoPage"
    Title="ImplicitStylesDemoPage"
    Padding="{StaticResource MediumPadding}"
    BackgroundColor="White">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderColor" Value="Black" />
            <Setter Property="BorderWidth" Value="4" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="BackgroundColor" Value="White" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="{StaticResource MediumSpacing}">
            <Button Text="OK" />
            <Button Text="Cancel" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>