<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:LocalizationDemo.Converters">

    <converters:CultureInfosToStringConverter x:Key="CultureInfosToStringConverter" />

    <converters:DateTimeToStringConverter
        x:Key="DateTimeToStringConverter"
        Format="G" />

    <converters:DecimalToStringConverter
        x:Key="DecimalToStringConverter"
        Format="N2" />

</ResourceDictionary>