    BackgroundColor="#ECF0F1">

    <!--
        DEMO: Margins/paddings (version 1):
        Space is define 'from outside to inside' and 'between elements'. This is the proper and most common way to define space between elements.
    -->
    <ScrollView Padding="40">
        <Grid>

            <VerticalStackLayout Spacing="40">
                <Grid
                    Padding="40"
                    BackgroundColor="#F9D33C"
                    HeightRequest="200">

                    <Label
                        BackgroundColor="#91E2F4"
                        Text="Children"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Center"
                        VerticalOptions="Fill"
                        VerticalTextAlignment="Center" />
                </Grid>

                <Grid
                    Padding="40"
                    BackgroundColor="#F9D33C"
                    HeightRequest="200">

                    <Label
                        BackgroundColor="#91E2F4"
                        Text="Children"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Center"
                        VerticalOptions="Fill"
                        VerticalTextAlignment="Center" />
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

