<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PagesLayoutsControlsDemo.Views.MainPage"
    Title="MainPage"
    Padding="10"
    BackgroundColor="LightGray">

    <Grid
        RowDefinitions="*, Auto"
        RowSpacing="10">

        <Label
            Grid.Row="0"
            Text="I'm the MainPage"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

        <VerticalStackLayout
            Grid.Row="1"
            Spacing="10">

            <!--  DEMO: Grids  -->
            <Button
                Clicked="NavigateToGridDemoPage"
                Text="GridDemoPage" />

            <!--  DEMO: StackLayouts  -->
            <Button
                Clicked="NavigateToStackLayoutDemoPage"
                Text="StackLayoutDemoPage" />

            <!--  DEMO: Controls  -->
            <Button
                Clicked="NavigateToControlsDemoPage"
                Text="ControlsDemoPage" />

            <!--  DEMO: Alignment  -->
            <Button
                Clicked="NavigateToAlignmentDemoPage"
                Text="AlignmentDemoPage" />

            <!--  DEMO: Margin, Padding, Spacing  -->
            <Button
                Clicked="NavigateToSpacingDemoPage"
                Text="SpacingDemoPage" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
