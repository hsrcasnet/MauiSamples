<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PagesLayoutsControlsDemo.Views.ControlsDemoPage"
    Title="ControlsDemoPage"
    Padding="10">
    <ScrollView>
        <VerticalStackLayout Spacing="10">

            <Label Text="Label" />

            <Button Text="Button" />

            <Entry
                Placeholder="Entry Placeholder"
                Text="Entry" />

            <Editor
                AutoSize="TextChanges"
                Placeholder="Editor Placeholder"
                Text="Editor" />

            <Picker Title="Picker Title">
                <Picker.Items>
                    <x:String>Item 1</x:String>
                    <x:String>Item 2</x:String>
                    <x:String>Item 3</x:String>
                </Picker.Items>
            </Picker>

            <DatePicker Format="D" />

            <TimePicker Format="T" />

            <Slider
                Maximum="100"
                Minimum="0" />

            <CheckBox
                IsChecked="True"
                HorizontalOptions="Start" />

            <Switch
                IsToggled="True"
                HorizontalOptions="Start" />

            <BoxView
                HeightRequest="50"
                WidthRequest="100"
                Color="LightGray"
                HorizontalOptions="Start" />

            <Frame
                Padding="10"
                BorderColor="LightGray"
                CornerRadius="20"
                HasShadow="True"
                HorizontalOptions="Start">
                <Label Text="Frame" />
            </Frame>

            <Border
                Padding="16,8"
                BackgroundColor="LightGray"
                Stroke="Black"
                StrokeThickness="4"
                HorizontalOptions="Start">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,20,0,20" />
                </Border.StrokeShape>
                <Label Text="Border" />
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>